<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportActivity">

    <TextView
        android:id="@+id/Report_title"
        android:layout_width="291dp"
        android:layout_height="55dp"
        android:text="@string/Report_title"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <TextView
        android:id="@+id/Title_report2"
        android:layout_width="248dp"
        android:layout_height="72dp"
        android:text="@string/Title_report2"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/Report_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.368"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Report_title"
        app:layout_constraintVertical_bias="0.484" />

    <Button
        android:id="@+id/Submit_button"
        android:layout_width="123dp"
        android:layout_height="67dp"
        android:text="@string/Submit_button"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Report_title"
        app:layout_constraintVertical_bias="0.935" />

    <TextView
        android:id="@+id/Report_description"
        android:layout_width="332dp"
        android:layout_height="316dp"
        android:background="@color/colorTextBox"
        android:hint="@string/Report_description"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Submit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Report_title"
        app:layout_constraintVertical_bias="0.915" />
</androidx.constraintlayout.widget.ConstraintLayout>