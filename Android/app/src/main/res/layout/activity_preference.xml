<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PreferenceActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/UploadPhoto"
            android:layout_width="250dp"
            android:layout_height="250dp"
            tools:srcCompat="@tools:sample/avatars[2]" />

        <Button
            android:id="@+id/uploadButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/prefPartnerLevel"
            android:text="@string/fitness_level" />

        <Spinner
            android:id="@+id/prefLevel"
            android:layout_width="271dp"
            android:layout_height="28dp"
            android:entries="@array/select_level" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/prefPartnerGender"
            android:text="@string/show_me_text_view" />

        <Spinner
            android:id="@+id/prefPartnerGender"
            android:layout_width="271dp"
            android:layout_height="28dp"
            android:entries="@array/select_gender" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/prefDistance"
            android:text="@string/max_distance_text_view_" />

        <Spinner
            android:id="@+id/prefDistance"
            android:layout_width="271dp"
            android:layout_height="28dp"
            android:entries="@array/select_distance" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/prefPartnerLevel"
            android:text="@string/preferred_level" />

        <Spinner
            android:id="@+id/prefPartnerLevel"
            android:layout_width="271dp"
            android:layout_height="28dp"
            android:entries="@array/select_partner_level" />
    </LinearLayout>
</ScrollView>